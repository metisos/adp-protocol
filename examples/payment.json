    "contact": "api@securepay.finance"
  },
  "capabilities": [
    {
      "id": "payment.process",
      "description": "Process one-time or recurring payments with automatic fraud detection",
      "inputs": {
        "amount": "decimal amount in cents",
        "currency": "ISO 4217 currency code",
        "payment_method": "card | bank_transfer | wallet | cryptocurrency",
        "payment_details": "payment method specific data",
        "customer_id": "string",
        "metadata": "object with additional transaction data"
      },
      "outputs": {
        "transaction_id": "unique transaction identifier",
        "status": "succeeded | failed | pending | requires_action",
        "fraud_score": "0-100 risk score",
        "confirmation_code": "payment confirmation code",
        "receipt_url": "URL to customer receipt"
      }
    },
    {
      "id": "payment.refund",
      "description": "Process full or partial refunds with automatic reconciliation",
      "inputs": {
        "transaction_id": "original transaction ID",
        "amount": "refund amount in cents or 'full'",
        "reason": "duplicate | fraud | customer_request | other",
        "notify_customer": "boolean"
      },
      "outputs": {
        "refund_id": "unique refund identifier",
        "status": "succeeded | pending | failed",
        "refund_amount": "actual refunded amount",
        "estimated_arrival": "ISO 8601 datetime"
      }
    },
    {
      "id": "payment.subscription",
      "description": "Manage recurring subscription billing with automatic retries",
      "inputs": {
        "action": "create | update | cancel | pause",
        "customer_id": "string",
        "plan_id": "subscription plan identifier",
        "billing_interval": "daily | weekly | monthly | yearly",
        "trial_days": "integer or null"
      },
      "outputs": {
        "subscription_id": "unique subscription ID",
        "status": "active | past_due | canceled | paused",
        "next_billing_date": "ISO 8601 date",
        "total_revenue": "lifetime value"
      }
    },
    {
      "id": "payment.verify",
      "description": "Verify payment methods and customer identity with 3D Secure",
      "inputs": {
        "payment_method": "payment method data",
        "verification_type": "card | bank_account | identity",
        "require_3ds": "boolean"
      },
      "outputs": {
        "verified": "boolean",
        "verification_id": "string",
        "card_brand": "visa | mastercard | amex | discover",
        "last4": "last 4 digits",
        "risk_level": "low | medium | high"
      }
    }
  ],
