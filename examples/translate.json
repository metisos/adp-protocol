  "capabilities": [
    {
      "id": "translate.text",
      "description": "Translate text between any supported language pair with context preservation",
      "inputs": {
        "text": "string or array of strings to translate",
        "source_language": "ISO 639-1 language code or 'auto'",
        "target_language": "ISO 639-1 language code",
        "domain": "general | technical | medical | legal | marketing",
        "preserve_formatting": "boolean"
      },
      "outputs": {
        "translated_text": "string or array of translated strings",
        "detected_language": "ISO 639-1 code if source was 'auto'",
        "confidence_score": "float between 0 and 1",
        "alternative_translations": "array of alternative phrasings"
      }
    },
    {
      "id": "translate.document",
      "description": "Translate entire documents while preserving formatting and structure",
      "inputs": {
        "document_url": "URL to document or base64 encoded content",
        "file_format": "pdf | docx | xlsx | pptx | html",
        "source_language": "ISO 639-1 code",
        "target_language": "ISO 639-1 code"
      },
      "outputs": {
        "translated_document_url": "URL to download translated document",
        "word_count": "integer",
        "pages_translated": "integer"
      }
    },
    {
      "id": "translate.glossary",
      "description": "Create and manage custom terminology glossaries for consistent translations",
      "inputs": {
        "action": "create | update | delete | list",
        "glossary_id": "string",
        "terms": "array of term pairs with source and target text",
        "language_pair": "source-target language code pair"
      },
      "outputs": {
        "glossary_id": "string",
        "term_count": "integer",
        "status": "active | inactive"
      }
    }
